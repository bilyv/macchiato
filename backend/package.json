{
  "name": "macchiato-suites-backend",
  "version": "1.0.0",
  "description": "Backend for Macchiato Suite Dreams hotel website",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:worker": "wrangler dev",
    "build": "tsc",
    "build:worker": "tsc && cp dist/worker.js dist/worker.js",
    "start": "node dist/index.js",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "lint": "eslint .",
    "test": "vitest run",
    "deploy-schema": "bun scripts/deploy-schema.ts",
    "db:deploy": "bun scripts/deploy-schema.ts",
    "test-supabase": "bun scripts/test-supabase.ts",
    "verify-supabase": "bun scripts/verify-supabase.ts"
  },
  "keywords": [
    "postgres",
    "express",
    "typescript",
    "hotel",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@supabase/supabase-js": "^2.49.8",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "pg": "^8.16.0",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250529.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vitest": "^1.4.0",
    "wrangler": "^4.18.0"
  }
}
